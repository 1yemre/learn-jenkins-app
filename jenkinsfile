pipeline {
    agent any

    stages {
        stage('Test') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    mkdir -p test-results  # Test sonuçları dizini oluşturuluyor
                    chmod -R 777 test-results  # Yazma izinleri veriliyor
                    npm test  # Testleri çalıştırma
                '''
            }
        }

        stage('E2E') {
            agent {
                docker {
                    image 'mcr.microsoft.com/playwright:v1.39.0-jammy'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    npm install serve
                    node_modules/.bin/serve -s build &
                    sleep 10
                    npx playwright test
                '''
            }
        }
    }

    post {
        always {
            junit '**/test-results/junit.xml'  # Test raporlarının doğru yolu
        }
    }
}
